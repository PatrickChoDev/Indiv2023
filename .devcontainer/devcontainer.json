{
  "name": "RAG Chatbots",
  "build": {
    "context": "..",
    "dockerfile": "./Dockerfile"
  },
  "runArgs": ["--gpus", "all"],
  "customizations": {
    "vscode": {
      "extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-toolsai.jupyter",
		"VisualStudioExptTeam.vscodeintellicode"
	]
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.conda,target=/home/vscode/.conda,type=bind,consistency=cached"
  ],
  "remoteUser": "1000"
}
